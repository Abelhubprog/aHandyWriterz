{
  "kind": "collectionType",
  "collectionName": "landing_sections",
  "info": {
    "singularName": "landing-section",
    "pluralName": "landing-sections",
    "displayName": "Landing section",
    "description": "Hero and content sections for marketing pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "pageSlug": {
      "type": "string",
      "required": true,
      "regex": "^[a-z0-9\\-_/]+$"
    },
    "sectionKey": {
      "type": "enumeration",
      "enum": [
        "hero",
        "feature-highlights",
        "service-grid",
        "testimonials",
        "call-to-action",
        "metrics"
      ],
      "default": "hero"
    },
    "eyebrow": {
      "type": "string"
    },
    "heading": {
      "type": "string"
    },
    "subheading": {
      "type": "string"
    },
    "body": {
      "type": "richtext"
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaUrl": {
      "type": "string"
    },
    "secondaryCtaLabel": {
      "type": "string"
    },
    "secondaryCtaUrl": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "default": 1
    },
    "media": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "sections.section-item"
    },
    "publishedAt": {
      "type": "datetime"
    }
  }
}
