{
  "collectionName": "components_blocks_galleries",
  "info": {
    "displayName": "Gallery",
    "description": "Image gallery with multiple images and layout options"
  },
  "options": {},
  "attributes": {
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "layout": {
      "type": "enumeration",
      "enum": ["grid", "carousel", "masonry"],
      "default": "grid"
    },
    "columns": {
      "type": "integer",
      "default": 3,
      "min": 1,
      "max": 6
    },
    "showCaptions": {
      "type": "boolean",
      "default": true
    }
  }
}