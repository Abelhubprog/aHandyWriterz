{
  "kind": "collectionType",
  "collectionName": "domain_pages",
  "info": {
    "singularName": "domain-page",
    "pluralName": "domain-pages",
    "displayName": "Domain page",
    "description": "Configurable landing content for domain routes"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "domain": {
      "type": "enumeration",
      "enum": [
        "adult-health",
        "mental-health",
        "child-nursing",
        "social-work",
        "technology",
        "ai",
        "crypto"
      ],
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "heroEyebrow": {
      "type": "string"
    },
    "heroTitle": {
      "type": "string"
    },
    "heroDescription": {
      "type": "text"
    },
    "heroImage": {
      "type": "media",
      "multiple": false
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaUrl": {
      "type": "string"
    },
    "highlights": {
      "type": "component",
      "repeatable": true,
      "component": "domain.highlight"
    },
    "spotlight": {
      "type": "component",
      "repeatable": true,
      "component": "sections.section-item"
    },
    "serviceSlugs": {
      "type": "json"
    },
    "articleSlugs": {
      "type": "json"
    },
    "metaDescription": {
      "type": "text"
    },
    "publishedAt": {
      "type": "datetime"
    }
  }
}
