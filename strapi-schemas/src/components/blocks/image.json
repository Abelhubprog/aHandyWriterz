{
  "collectionName": "components_blocks_images",
  "info": {
    "displayName": "Image",
    "description": "Image block with caption and alt text"
  },
  "options": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "caption": {
      "type": "string"
    },
    "altText": {
      "type": "string",
      "required": true
    },
    "width": {
      "type": "enumeration",
      "enum": ["small", "medium", "large", "full"],
      "default": "medium"
    },
    "alignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "center"
    }
  }
}
