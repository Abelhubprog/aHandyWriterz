{
  "collectionName": "components_seo_metadata",
  "info": {
    "displayName": "SEO Metadata",
    "description": "SEO fields for meta tags and social sharing"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 60
    },
    "description": {
      "type": "text",
      "maxLength": 160
    },
    "keywords": {
      "type": "string"
    },
    "canonicalUrl": {
      "type": "string"
    },
    "ogTitle": {
      "type": "string",
      "maxLength": 60
    },
    "ogDescription": {
      "type": "text",
      "maxLength": 160
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "twitterTitle": {
      "type": "string",
      "maxLength": 60
    },
    "twitterDescription": {
      "type": "text",
      "maxLength": 160
    },
    "twitterCard": {
      "type": "enumeration",
      "enum": ["summary", "summary_large_image", "app", "player"],
      "default": "summary_large_image"
    },
    "noIndex": {
      "type": "boolean",
      "default": false
    },
    "noFollow": {
      "type": "boolean",
      "default": false
    }
  }
}
