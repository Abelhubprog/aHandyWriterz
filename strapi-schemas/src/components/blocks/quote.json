{
  "collectionName": "components_blocks_quotes",
  "info": {
    "displayName": "Quote",
    "description": "Highlighted quote or testimonial block"
  },
  "options": {},
  "attributes": {
    "content": {
      "type": "text",
      "required": true
    },
    "author": {
      "type": "string"
    },
    "authorTitle": {
      "type": "string"
    },
    "authorImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "citation": {
      "type": "string"
    },
    "quoteStyle": {
      "type": "enumeration",
      "enum": ["default", "testimonial", "pullquote", "blockquote"],
      "default": "default"
    },
    "alignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "left"
    }
  }
}
