{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "graphql": {
      "description": "Editorial articles"
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "body": {
      "type": "richtext"
    },
    "author": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "seo": {
      "type": "component",
      "component": "seo.meta"
    },
    "publishedAt": {
      "type": "datetime"
    }
  }
}
